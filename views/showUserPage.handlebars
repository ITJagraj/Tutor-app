<section>
  {{#if loggedIn}}
  <h2>{{userName}}</h2>

  <h3>Questions</h3>
  <ol class="question-list">
  {{#each userInfo.questions as |question|}}
  <li>
    {{> question-info question }}
    <a class="answers-link" href="/question/{{question.id}}">Answers</a>
    <br></br>
  </li>
  {{/each}}
</ol>

<div class="answers">
  <h3>Answers</h3>
  {{#each userInfo.answers as |answer|}}
  <section class="answer">
    <div class="answer-info">
      {{user.username}} on {{format_date createdAt}}
    </div>
    <div answer_id="{{id}}" class="answer-text-box">
      {{answer_text}}
    </div>
    <a class="questions-link" href="/question/{{question_id}}">Question</a>
  </section>
  {{/each}}
</div>

  <form user_id={{userInfo.id}} question_id="{{question.id}}" class="edit-user-form">
    <h3>Edit Profile Info</h3>
    <div>
      <label for="first-name">First Name</label>
      <input type="text" id="first-name" name="first-name" value="{{userInfo.first_name}}"/> 
    </div>
    <div>
      <label for="last-name">Last Name</label>
      <input id="last-name" name="last-name" value="{{userInfo.last_name}}"/>
    </div>
    <div>
      <label for="email">Email</label>
      <input id="email" name="email" value="{{userInfo.email}}"/>
    </div>
    <div>
      <label for="password">Password</label>
      <input type="password" id="password" name="password"/>
    </div>

    <button type="submit" class="save-btn">Save Changes</button>
    <button type="submit" class="delete-btn">Delete User</button>
    {{/if}}
    
  </form>
</section>

{{#if loggedIn}}
<script src="/javascript/edit-user.js"></script>
<script src="/javascript/delete-user.js"></script>
{{/if}}